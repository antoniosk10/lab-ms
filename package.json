{
  "name": "lab-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "yarn compile",
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "server:dev": "turbo server:dev",
    "full:dev": "concurrently \"yarn server:dev\"  \"yarn dev\" --restart-after 200 --restart-tries 5",
    "lint": "turbo lint",
    "compile": "graphql-codegen --config ./config/codegen.ts",
    "watch": "graphql-codegen -w --config ./config/codegen.ts",
    "app:add": "yarn workspace lab-next-app add",
    "app:remove": "yarn workspace lab-next-app remove",
    "server:add": "yarn workspace lab-mock-server add",
    "server:remove": "yarn workspace lab-mock-server remove"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/client-preset": "^2.0.0",
    "@graphql-codegen/near-operation-file-preset": "^2.5.0",
    "@graphql-codegen/typed-document-node": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.0",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "^3.0.0",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@graphql-codegen/typescript-resolvers": "^3.0.0",
    "@graphql-codegen/typescript-urql": "^3.7.3",
    "@types/express": "^4.17.17",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5"
  }
}
