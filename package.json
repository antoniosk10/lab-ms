{
  "name": "lab-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "compile": "graphql-codegen --config ./config/codegen.ts",
    "watch": "graphql-codegen -w --config ./config/codegen.ts",
    "app-add": "yarn workspace lab-next-app add",
    "app-remove": "yarn workspace lab-next-app remove"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@graphql-codegen/cli": "^3.0.0",
    "@graphql-codegen/client-preset": "^2.0.0",
    "turbo": "^1.7.4"
  }
}
